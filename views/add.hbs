<h1>Add new course</h1>

<form action="/add" method="POST">
	<div class="input-field">
		<input id="title" type="text" name="title"class="validate" required>
		<label for="title">Name of course</label>
		<span class="helper-text" data-error="Fill the name" data-success="right"></span>
	</div>
	<div class="input-field">
		<input id="price" name="price" type="number" class="validate" required min="1">
		<label for="price">Price of course</label>
		<span class="helper-text" data-error="Fill the price"></span>
	</div>
	<div class="input-field">
		<input id="img" name="img" type="text" class="validate" required>
		<label for="img">URL for image</label>
		<span class="helper-text" data-error="Fill the URL of image" data-success="right"></span>
	</div>
	<button class="btn btn-primary" type="submit">Add course</button>
</form>