<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
	<div class="input-field">
		<input id="title" type="text" name="title" class="validate" required value="{{course.title}}">
		<label for="title">Name of course</label>
		<span class="helper-text" data-error="Fill the name" data-success="right"></span>
	</div>
	<div class="input-field">
		<input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
		<label for="price">Price of course</label>
		<span class="helper-text" data-error="Fill the price"></span>
	</div>
	<div class="input-field">
		<input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
		<label for="img">URL for image</label>
		<span class="helper-text" data-error="Fill the URL of image" data-success="right"></span>

		<input type="hidden" name="id" value="{{course.id}}">
	</div>
	<button type="submit" class="btn btn-primary" type="submit">Edit</button>
</form>

<form action="/courses/remove" method="POST">
	<input type="hidden" name="id" value="{{course.id}}">
	<button class="btn red">Delete</button>
</form>